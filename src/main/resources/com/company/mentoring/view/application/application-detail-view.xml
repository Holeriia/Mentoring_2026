<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://applicationDetailView.title"
      focusComponent="form">
    <data>
        <instance id="applicationDc"
                  class="com.company.mentoring.entity.Application">
            <fetchPlan extends="_base">
                <property name="workspace" fetchPlan="_instance_name"/>
                <property name="initiator" fetchPlan="_instance_name">
                    <property name="user" fetchPlan="_instance_name"/>
                </property>
                <property name="priorities" fetchPlan="_base">
                    <property name="supervisor" fetchPlan="_instance_name">
                        <property name="user" fetchPlan="_instance_name"/>
                    </property>
                </property>
                <property name="teams" fetchPlan="_base">
                    <property name="members" fetchPlan="_base">
                        <property name="participant" fetchPlan="_instance_name">
                            <property name="user" fetchPlan="_instance_name"/>
                        </property>
                    </property>
                </property>
            </fetchPlan>
            <loader id="applicationDl"/>
            <collection id="prioritiesDc" property="priorities"/>
            <collection id="teamsDc" property="teams"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="applicationDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <entityPicker id="workspaceField" property="workspace">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <entityPicker id="initiatorField" property="initiator">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textField id="titleField" property="title"/>
            <textArea id="descriptionField" height="9.5em" property="description"/>
            <select id="statusField" property="status"/>
            <textField id="currentPriorityIndexField" property="currentPriorityIndex"/>
            <textField id="processInstanceIdField" property="processInstanceId"/>
        </formLayout>
        <h4 text="msg://com.company.mentoring.entity/Application.priorities"/>
        <hbox id="prioritiesButtonsPanel" classNames="buttons-panel">
            <button action="prioritiesDataGrid.createAction"/>
            <button action="prioritiesDataGrid.editAction"/>
            <button action="prioritiesDataGrid.removeAction"/>
        </hbox>
        <dataGrid id="prioritiesDataGrid" dataContainer="prioritiesDc" width="100%" minHeight="20em">
            <actions>
                <action id="createAction" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="editAction" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns>
                <column property="priorityNumber"/>
                <column property="supervisor"/>
            </columns>
        </dataGrid>
        <h4 text="msg://com.company.mentoring.entity/Application.teams"/>
        <hbox id="teamsButtonsPanel" classNames="buttons-panel">
            <button action="teamsDataGrid.createAction"/>
            <button action="teamsDataGrid.editAction"/>
            <button action="teamsDataGrid.removeAction"/>
        </hbox>
        <dataGrid id="teamsDataGrid" dataContainer="teamsDc" width="100%" minHeight="20em">
            <actions>
                <action id="createAction" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="editAction" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns>
                <column property="teamType"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
