<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://applicationDetailView.title"
      focusComponent="form">
    <data>
        <instance id="applicationDc"
                  class="com.company.mentoring.entity.Application">
            <fetchPlan extends="_base">
                <property name="workspace" fetchPlan="_instance_name"/>
                <property name="initiator" fetchPlan="_instance_name">
                    <property name="user" fetchPlan="_instance_name"/>
                </property>
                <property name="priorities" fetchPlan="_base">
                    <property name="participant" fetchPlan="_instance_name">
                        <property name="user" fetchPlan="_instance_name"/>
                    </property>
                </property>
            </fetchPlan>
            <loader id="applicationDl"/>
            <collection id="prioritiesDc" property="priorities"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="applicationDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="titleField" property="title"/>
            <textArea id="descriptionField" height="9.5em" property="description"/>
            <select id="statusField" property="status" readOnly="true"/>
        </formLayout>
        <h4 text="msg://com.company.mentoring.entity/Application.priorities"/>
        <hbox id="prioritiesButtonsPanel" classNames="buttons-panel">
            <button action="prioritiesDataGrid.createAction" text="msg://createAction"/>
            <button action="prioritiesDataGrid.editAction" text="msg://editAction"/>
            <button action="prioritiesDataGrid.removeAction" text="msg://remoteAction"/>
        </hbox>
        <dataGrid id="prioritiesDataGrid" dataContainer="prioritiesDc" width="100%" minHeight="20em">
            <actions>
                <action id="createAction" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="editAction" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns>
                <column property="priorityNumber"/>
                <column property="participant"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" text="msg://io.jmix.bpmflowui.view.modeler.properties.sendemailtask/save" action="saveAction"/>
<!--            <button id="closeButton" action="closeAction" text="msg://closeAction"/>-->
            <button id="startProcessBtn" icon="vaadin:arrow-circle-right" text="msg://applicationStartBtn"/>/>
        </hbox>
    </layout>
</view>
