<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://applicationPriorityDetailView.title"
      focusComponent="form">
    <data>
        <instance id="applicationPriorityDc"
                  class="com.company.mentoring.entity.ApplicationPriority">
            <fetchPlan extends="_base">
                <property name="application">
                    <property name="initiator">
                        <property name="contextRole"/>
                        <property name="workspace"/>
                    </property>
                </property>
                <property name="participant">
                    <property name="user" fetchPlan="_instance_name"/>
                </property>
            </fetchPlan>
        </instance>

        <collection id="participantsDc"
                    class="com.company.mentoring.entity.WorkspaceParticipant">
            <fetchPlan extends="_base"/>
            <loader id="participantsDl">
                <query>
                    <![CDATA[
                select p from WorkspaceParticipant p
                where p.workspace = :workspace
                  and p.contextRole = :role
            ]]>
                </query>
            </loader>
        </collection>

    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="applicationPriorityDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="priorityNumberField" property="priorityNumber" readOnly="true"/>
            <entityComboBox id="participantField"
                            property="participant"
                            itemsContainer="participantsDc"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
