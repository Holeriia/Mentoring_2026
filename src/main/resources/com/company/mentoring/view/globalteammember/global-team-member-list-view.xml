<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://globalTeamMemberListView.title"
      focusComponent="globalTeamMembersDataGrid">
    <data>
        <collection id="globalTeamMembersDc"
                    class="com.company.mentoring.entity.GlobalTeamMember">
            <fetchPlan extends="_base">
                <property name="globalTeam" fetchPlan="_base"/>
                <property name="user" fetchPlan="_instance_name">
                    <property name="username"/>
                </property>
            </fetchPlan>
            <loader id="globalTeamMembersDl" readOnly="true">
                <query>
                    <![CDATA[select e from GlobalTeamMember e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="globalTeamMembersDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="globalTeamMembersDataGrid.createAction"/>
            <button id="editButton" action="globalTeamMembersDataGrid.editAction"/>
            <button id="removeButton" action="globalTeamMembersDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="globalTeamMembersDl"/>
        </hbox>
        <dataGrid id="globalTeamMembersDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="globalTeamMembersDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="globalTeam"/>
                <column property="user"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
