<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://workspaceDetailView.title"
      focusComponent="form">
    <data>
        <instance id="workspaceDc"
                  class="com.company.mentoring.entity.Workspace">
            <fetchPlan extends="_base">
                <property name="owner" fetchPlan="_base">
                </property>

                <property name="participants" fetchPlan="_base">
                    <property name="user" fetchPlan="_base">
                    </property>
                </property>
            </fetchPlan>
            <loader id="workspaceDl"/>
            <collection id="participantsDc" property="participants"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="workspaceDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <textArea id="descriptionField" height="9.5em" property="description"/>
            <select id="statusField" property="status"/>
            <entityPicker id="ownerField" property="owner">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <h4 text="msg://com.company.mentoring.entity/Workspace.participants"/>
        <hbox id="participantsButtonsPanel" classNames="buttons-panel">
            <button action="participantsDataGrid.createAction"/>
            <button action="participantsDataGrid.editAction"/>
            <button action="participantsDataGrid.removeAction"/>
        </hbox>
        <dataGrid id="participantsDataGrid" dataContainer="participantsDc" width="100%" minHeight="20em">
            <actions>
                <action id="createAction" type="list_create">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="editAction" type="list_edit">
                    <properties>
                        <property name="openMode" value="DIALOG"/>
                    </properties>
                </action>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns>
                <column property="contextRole"/>
                <column property="maxAssignments"/>
                <column property="user"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
