<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://workspaceDashboardView.title">

    <data readOnly="true">
        <collection id="applicationsDc" class="com.company.mentoring.entity.Application" fetchPlan="_base">
            <loader id="applicationsDl">
                <query>
                    <![CDATA[select e from Application e where (:workspaceId is null or e.workspace.id = :workspaceId)]]>
                </query>
            </loader>
        </collection>

        <collection id="participantsDc" class="com.company.mentoring.entity.WorkspaceParticipant">
            <fetchPlan extends="_base">
                <property name="user" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="participantsDl">
                <query>
                    <![CDATA[select e from WorkspaceParticipant e
                 left join fetch e.user
                 where e.workspace.id = :workspaceId]]>
                </query>
            </loader>
        </collection>

        <collection id="tasksDc"
                    class="io.jmix.bpm.entity.TaskData">
            <loader id="tasksDl"/>
        </collection>
    </data>

    <layout spacing="true" padding="true">

        <tabSheet id="mainTabs" width="100%">

            <tab id="findTeamTab" label="Команды">
                <vbox id="participantsBox" padding="false" spacing="true" width="100%">
                    <h3 text="Участники пространства"/>
                    <dataGrid id="participantsDataGrid"
                              width="100%"
                              minHeight="15em"
                              dataContainer="participantsDc">
                        <columns>
                            <column property="user.username" header="Логин"/>
                            <column property="user.firstName" header="Имя"/>
                            <column property="user.lastName" header="Фамилия"/>
                            <column property="contextRole" header="Роль в пространстве"/>
                            <column property="maxAssignments" header="Лимит мест"/>
                        </columns>
                    </dataGrid>
                </vbox>
            </tab>

            <tab id="findLeaderTab" label="Заявки">
                <vbox spacing="true" width="100%">
                    <vbox id="applicationsBox" padding="false" spacing="true" width="100%">
                        <h3 text="Мои заявки"/>

                        <hbox id="buttonsPanel" classNames="buttons-panel">
                            <button id="createButton" text="msg://create" icon="PLUS"/>
                            <button id="editButton" text="msg://com.company.mentoring.view.application/editAction" action="applicationsDataGrid.edit"/>
                            <button id="removeButton" text="msg://com.company.mentoring.view.application/remoteAction" action="applicationsDataGrid.remove"/>
                        </hbox>

                        <dataGrid id="applicationsDataGrid" width="100%" dataContainer="applicationsDc">
                            <actions>
                                <action id="create" type="list_create">
                                    <properties>
                                        <property name="openMode" value="DIALOG"/>
                                    </properties>
                                </action>
                                <action id="edit" type="list_edit">
                                    <properties>
                                        <property name="openMode" value="DIALOG"/>
                                    </properties>
                                </action>
                                <action id="remove" type="list_remove"/>
                            </actions>
                            <columns>
                                <column property="title"/>
                                <column property="status"/>
                            </columns>
                        </dataGrid>
                    </vbox>

                    <vbox id="myTasksBox" padding="false" spacing="true" width="100%">
                        <h3 text="Мои задачи"/>
                        <dataGrid id="tasksDataGrid"
                                  width="100%"
                                  minHeight="15em"
                                  dataContainer="tasksDc">
                            <columns>
                                <!-- название задачи -->
                                <column property="name" header="Задача"/>
                                <!-- когда задача создана (пришла) -->
                                <column property="createTime" header="Получена" autoWidth="true"/>
                                <!-- если нужно, можно добавить dueDate -->
                                <!-- <column property="dueDate" header="Срок" autoWidth="true"/> -->
                            </columns>
                            <actions>
                                <!-- действие для открытия формы задачи -->
                                <action id="openTaskForm" type="list_edit"/>
                            </actions>
                        </dataGrid>
                    </vbox>
                </vbox>
            </tab>
        </tabSheet>
    </layout>
</view>