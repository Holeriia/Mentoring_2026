<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://workspaceParticipantDetailView.title"
      focusComponent="form">
    <data>
        <instance id="workspaceParticipantDc"
                  class="com.company.mentoring.entity.WorkspaceParticipant">
            <fetchPlan extends="_base">
<!--                <property name="workspace">-->
<!--                    <property name="name"/>-->
<!--                </property>-->
                <property name="user" fetchPlan="_base">
                </property>
            </fetchPlan>
            <loader id="workspaceParticipantDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="workspaceParticipantDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
<!--            <entityPicker id="workspaceField" property="workspace">-->
<!--                <actions>-->
<!--                    <action id="entityLookupAction" type="entity_lookup"/>-->
<!--                    <action id="entityClearAction" type="entity_clear"/>-->
<!--                </actions>-->
<!--            </entityPicker>-->
            <entityPicker id="userField" property="user">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <select id="contextRoleField" property="contextRole"/>
            <textField id="maxAssignmentsField" property="maxAssignments"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
