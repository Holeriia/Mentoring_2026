<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://workspaceParticipantListView.title"
      focusComponent="workspaceParticipantsDataGrid">
    <data>
        <collection id="workspaceParticipantsDc"
                    class="com.company.mentoring.entity.WorkspaceParticipant">
            <fetchPlan extends="_base">
                <property name="workspace" fetchPlan="_base">
                </property>
                <property name="user" fetchPlan="_base">
                </property>
            </fetchPlan>
            <loader id="workspaceParticipantsDl" readOnly="true">
                <query>
                    <![CDATA[select e from WorkspaceParticipant e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="workspaceParticipantsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="workspaceParticipantsDataGrid.createAction"/>
            <button id="editButton" action="workspaceParticipantsDataGrid.editAction"/>
            <button id="removeButton" action="workspaceParticipantsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="workspaceParticipantsDl"/>
        </hbox>
        <dataGrid id="workspaceParticipantsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="workspaceParticipantsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="workspace"/>
                <column property="user"/>
                <column property="contextRole"/>
                <column property="maxAssignments"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
